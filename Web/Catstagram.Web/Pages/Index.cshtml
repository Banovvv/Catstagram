@page
@using Catstagram.Services.Data.Models
@model List<PostHomeModel>
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model.Count() == 0)
{
    <h1>No posts!</h1>
}

@foreach (var post in Model)
{
    <div class="carousel-item">        
        <img class="d-block w-100" style="height:500px"
         src="data:image/png;base64, @Convert.ToBase64String(post.Image)" alt="">
        <div class="carousel-caption d-none d-md-block">
            <h5>
                @*<a class="btn btn-primary" asp-controller="Houses" asp-action="Details"
                    asp-route-id="@post.Id"> @post.Caption</a>*@
            </h5>
        </div>
    </div>
}